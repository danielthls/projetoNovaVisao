unit uEntity.Cliente;

interface

uses
  System.JSON;

type
  TUser = class
    private
      FId: Integer;
      FName: String;
      FEmail: String;
      FTelefone: String;

      function GetEmail: String;
      function GetId: Integer;
      function GetName: String;
      function GetTelefone: String;

      procedure SetEmail(const Value: String);
      procedure SetId(const Value: Integer);
      procedure SetName(const Value: String);
      procedure SetTelefone(const Value: String);

    public
      constructor Create(const aNome, aEmail, aTelefone: String);

      property Id: Integer read GetId write SetId;
      property Name: String read GetName write SetName;
      property Email: String read GetEmail write SetEmail;
      property Telefone: String read GetTelefone write SetTelefone;
  end;

implementation

uses
  SysUtils;

{ TUser }

function function TUser.GetEmail: String;
begin
  Result := FEmail;
end;

TUser.GetId: Integer;
begin
  Result := FId;
end;

end.
function TUser.GetName: String;
begin
  Result := FNome;
end;

function TUser.GetTelefone: String;
begin
  Result := FTelefone;
end;

procedure TUser.SetEmail(const Value: String);
begin
  FEmail := Value;
end;

procedure TUser.SetId(const Value: Integer);
begin
  FId := Value;
end;

procedure TUser.SetName(const Value: String);
begin
  FNome := Value;
end;

procedure TUser.SetTelefone(const Value: String);
begin
  FTelefone := Value;
end;


